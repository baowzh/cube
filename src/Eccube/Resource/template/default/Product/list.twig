{% extends 'default_frame.twig' %}
{% set body_class = 'product_page' %}
{% block main %}
<section class="single_blog_area section-padding-80">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-9">
                <div class="post-list">
                <div class="row no-gutters">
                    {% for Product in pagination %}  
                    <div class="single-blog-area wow fadeInUp" style="display: flex;" data-wow-delay="{{0.5 * (loop.index - 1)}}s">
                        <div class="blog-thumb">
                        <img src="{{ asset(Product.main_list_image|no_image_product, 'save_image') }}" alt="å›³">
                        </div>
                        <div class="blog-content">
                            <h5><a href="{{ url('product_detail', {'id': Product.id}) }}" title="{{ Product.name }}">{{ Product.name }}</a></h5>
                            {% if Product.description_list %}
                                <p class="abstract">{{ Product.description_list|raw|nl2br }}</p>
                            {% endif %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
                </div>
            </div>
            <!-- ****** Blog Sidebar ****** -->
            <div class="col-10 col-lg-3">
                <div class="blog-sidebar">
                    <!-- Single Widget Area -->
                    <div class="single-widget-area popular-post-widget">
                        <!-- Single Popular Post -->
                        <div class="widget-title">
                                <h5>Blog</h5>
                            </div>
                         {% for post in posts %}  
                            <div class="single-populer-post">
                                <div class="post-contents">
                                    <a href="{{ url('post_detail', {'id': post.ID}) }}" title="{{post.post_title}}" target="_blank">
                                        <h6>{{post.post_title}}</h6>
                                    </a>
                                    <a class="post-date" href="#">{{post.post_date}}</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
