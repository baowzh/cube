{% extends 'post_frame.twig' %}

{% block main %}
    <section class="single_blog_area section-padding-80-50">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-12">
                    <div class="row no-gutters">

                        <!-- Single Post Share Info -->
                        <div class="col-2 col-sm-1">
                            <div class="single-post-share-info">
                                <a href="http://www.facebook.com/sharer.php?u={{url}}&t={{title}}" target="_blank" title="Facebookで共有" class="facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                                <a href="http://twitter.com/intent/tweet?text={{titleAndURL}}&url={{url}}" target="_blank" title="Twitterで共有" class="twitter"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                                <a href="https://plus.google.com/share?url={{url}}" target="_blank" title="Google+で共有" class="googleplus"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                                <a href="http://b.hatena.ne.jp/add?mode=confirm&url={{url}}&title={{title}}" class="icon-hatena" target="_blank" data-hatena-bookmark-title="{{title}}" title="このエントリーをはてなブックマークに追加"></a>
                                <a href="http://getpocket.com/edit?url={{url}}" class="get-pocket" target="_blank" title="pocketで共有"><i class="fa fa-get-pocket" aria-hidden="true"></i></a>
                                <a href="http://line.naver.jp/R/msg/text/?{{titleAndURL}}" class="icon-line" target="_blank" title="LINEで送る"></a>
                            </div>
                        </div>

                        <!-- Single Post -->
                        <div class="col-10 col-sm-11">
                            <div class="single-post post-contents">
                                <h3 class="post-title">{{ post.post_title }}</h3>
                                <a class="post-date" href="#">{{ post.post_date }}</a>
                                <!-- Post Content -->
                                <div class="post-content">
                                   {{ outLine|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
